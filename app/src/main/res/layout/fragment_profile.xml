<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/line_1"
                android:layout_height="@dimen/card_line_height"
                android:layout_width="@dimen/card_line_1_width"
                android:layout_marginTop="@dimen/card_line_top"
                android:background="@color/card_line"/>
            <ImageView
                android:layout_width="@dimen/my_pic"
                android:layout_height="@dimen/my_pic"
                android:contentDescription="@string/drafts"
                app:srcCompat="@drawable/discover"
                android:background="@color/click_blue"
                app:tint="#FFFFFF" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/Name"
                        style="@style/TextAppearance.AppCompat.Headline"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:layout_marginTop="3dp"
                        android:text="移动应用" />
                    <TextView
                        android:id="@+id/line_2"
                        android:layout_height="@dimen/card_line_height"
                        android:layout_width="@dimen/card_line_2_width"
                        android:layout_marginTop="@dimen/small_margin"
                        android:background="@color/card_line"/>
                    <TextView
                        android:id="@+id/motto"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/motto"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:layout_marginTop="@dimen/small_margin"
                        android:text="希望可以早点写完大作业" />
                </LinearLayout>
            </LinearLayout>
        <TextView
            android:id="@+id/interval_1"
            android:layout_height="@dimen/profile_interval"
            android:layout_width="match_parent"
            android:background="@color/interval_grey"/>
        <LinearLayout
            android:id="@+id/drafts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/my_profile_gap"
            android:layout_marginHorizontal="@dimen/profile_line_margin">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/drafts"
                app:srcCompat="@drawable/ic_baseline_drafts_24"
                app:tint="#3CB371" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/profile_line_margin"
                android:text="@string/drafts"
                android:layout_weight="1"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24"
                app:tint="#A8A8A8" />
        </LinearLayout>
        <TextView
            android:id="@+id/interval_2"
            android:layout_height="@dimen/profile_interval"
            android:layout_width="match_parent"
            android:background="@color/interval_grey"/>
        <LinearLayout
            android:id="@+id/interest_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/my_profile_gap"
            android:layout_marginHorizontal="@dimen/profile_line_margin">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/drafts"
                app:srcCompat="@drawable/account_star"
                app:tint="#7765E7" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/profile_line_margin"
                android:text="@string/interests_list"
                android:layout_weight="1"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="227dp"
                app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24"
                app:tint="#A8A8A8" />
        </LinearLayout>
        <TextView
            android:id="@+id/interval_3"
            android:layout_height="@dimen/profile_interval"
            android:layout_width="match_parent"
            android:background="@color/interval_grey"/>
        <LinearLayout
            android:id="@+id/edit_my_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/my_profile_gap"
            android:layout_marginHorizontal="@dimen/profile_line_margin">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/drafts"
                app:srcCompat="@drawable/text_box_edit_outline"
                app:tint="#696969" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/profile_line_margin"
                android:text="@string/edit_my_profile"
                android:layout_weight="1"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="197dp"
                app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24"
                app:tint="#A8A8A8" />
        </LinearLayout>
        <TextView
            android:id="@+id/interval_4"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/interval_grey"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>