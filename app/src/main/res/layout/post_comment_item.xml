<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/following_item"
    android:orientation="vertical">
    <TextView
        android:id="@+id/interval"
        android:layout_height="@dimen/interval_height"
        android:layout_width="match_parent"
        android:background="@color/interval_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/post_item_inside_margin">
        <ImageView
            android:id="@+id/commenter_avatar"
            android:layout_width="@dimen/commenter_pic"
            android:layout_height="@dimen/commenter_pic"
            android:contentDescription="@string/drafts"
            tools:srcCompat="@drawable/text_box_edit_outline"
            android:background="@drawable/image_border"
            android:padding="@dimen/image_border_w"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pic_to_text_margin"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/nickname"
                    android:textSize="@dimen/commenter_name"
                    android:textColor="@color/click_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="用户D" />
                <TextView
                    android:id="@+id/comment_content"
                    android:textSize="@dimen/commenter_name"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/commenter_item_inside_margin"
                    tools:text="好！" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>