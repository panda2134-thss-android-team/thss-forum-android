<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/following_item"
    android:orientation="vertical">
    <TextView
        android:id="@+id/interval"
        android:layout_height="@dimen/interval_height"
        android:layout_width="match_parent"
        android:background="@color/interval_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/post_item_inside_margin">
        <ImageView
            android:id="@+id/commenter_avatar"
            android:layout_width="@dimen/commenter_pic"
            android:layout_height="@dimen/commenter_pic"
            android:contentDescription="@string/drafts"
            tools:srcCompat="@tools:sample/avatars"
            android:background="@drawable/image_border"
            android:padding="@dimen/image_border_w"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pic_to_text_margin"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/nickname"
                        android:textSize="@dimen/commenter_name"
                        android:textColor="@color/click_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@tools:sample/first_names" />
                    <LinearLayout
                        android:id="@+id/reply_wrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/commenter_name"
                            android:layout_marginHorizontal="@dimen/small_margin"
                            android:text="@string/reply"/>
                        <TextView
                            android:id="@+id/nicknameReplyTo"
                            android:textSize="@dimen/commenter_name"
                            android:textColor="@color/click_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="@tools:sample/first_names" />
                    </LinearLayout>
                </LinearLayout>

            <TextView
                android:id="@+id/comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/commenter_item_inside_margin"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textSize="@dimen/commenter_name"
                tools:text="@tools:sample/lorem/random" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>